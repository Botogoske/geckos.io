{
  "compilerOptions": {
    "target": "ES2019",
    "module": "es2020",
    "moduleResolution": "node",

    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strictPropertyInitialization": false
  }
}
